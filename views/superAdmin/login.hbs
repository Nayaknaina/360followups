    </div>
    <script src="/assets/vendor/jquery/jquery.min.js"></script>
    <script src="/assets/vendor/bootstrap/js/bootstrap.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/11.0.4/js/intlTelInput.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/intl-tel-input@17.0.13/build/js/utils.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script src="/assets/js/loader/loader.js"></script>

    <script>
        $(document).ready(function () {
  $("#loginFormForSuper").submit(function (e) {
    e.preventDefault(); // Prevent the form from submitting normally

    var formData = {
      email: $("#email").val(),
      password: $("#password").val(),
    };
    console.log(formData)
    // Send the data using AJAX
    addLoader('loader')
    $.ajax({
      url: "/wsv/super/login", // Replace with your server endpoint
      type: "POST",
      data: formData, // Send form data
      success: function (response) {
        // Handle success response
        removeLoader('loader')
        console.log("Form submitted successfully:", response);
        window.location.href = "/wsv/super/dashboard";
      },
      error: function (xhr, status, error) {
        // Handle error response
        console.log("Form submission error:", error);

        removeLoader("loader");
         toastr.error(xhr.responseJSON.msg);
        
      },
    });
  });
});

    </script>
</body>

